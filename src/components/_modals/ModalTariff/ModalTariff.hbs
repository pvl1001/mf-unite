<!--Подробнее Тарифы-->
{{#each tariffs}}
   <div class="modal tariff-modal about-tariff-modal tariff-modal_{{id}}" id="{{id}}" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalLabel"
        aria-hidden="true">


      <div class="modal-dialog modal-dialog-centered" role="document">

         <div class="modal-content">

            <div class="modal-scroll">
               <div class="tariff-modal__btn-close modal-dialog">
                  <button type="button" class="modal-close" data-dismiss="modal" aria-label="Close"></button>
               </div>
               <div class="tariff-modal__title wrapp" data-view="modal_{{id}}_start">
                  <h1>{{group}} {{name}}</h1>
               </div>
               <div class="tariff-modal__container">

                  <ul class="tariff-modal__items">
                     {{#each infoModal}}
                        <li class="tariff-modal__item item-modal wrapp">
                           <div class="item-modal__title">
                              <div class="item-modal__title-icon">
                                 <img src="img/svg/{{icon}}" alt="{{icon}}">
                              </div>
                              <h2>{{title}}</h2>
                           </div>

                           <ul class="item-modal__options">
                              {{#each options}}
                                 <li class="item-modal__option option-item">
                                    <div class="option-item__text">
                                       <p class="option-item__text-name">{{name}}</p>
                                       {{#if description}}
                                          <p class="option-item__text-desc">{{{description}}}</p>
                                       {{/if}}
                                    </div>
                                    <p class="option-item__value">
                                       {{value}}{{#h-if name '===' 'Мегафон ТВ'}}{{#each ../../mftv}},<br>
                                       {{name}}{{/each}}{{/h-if}}
                                    </p>
                                 </li>
                              {{/each}}
                           </ul>
                        </li>
                     {{/each}}
                  </ul>

                  {{#h-if mftv.length '===' 2}}{{> BannerMFTVStart}}{{/h-if}}
                  {{#h-if mftv.length '===' 4}}{{> BannerMFTVAll}}{{/h-if}}

                  <div class="tariff-modal__dop-options wrapp">
                     <h2 class="tariff-modal__dop-options-title">Дополнительные опции:</h2>
                     <ul class="tariff-modal__dop-options-cards">

                        {{#each equipments}}
                           {{#h-if id '!==' 'sim'}}
                              <li id="card-{{../id}}-{{id}}"
                                  class="tariff-modal__dop-options-card dop-options-card
                              {{#h-if id '===' 'almond'}} dop-options-card_almond{{/h-if}}">

                                 {{#h-if name '===' 'Android TV'}}
                                    <div class="dop-options-card__mark"><span class="mark">Акция</span></div>
                                 {{/h-if}}

                                 <div class="dop-options-card__container

                                 {{#if plan}} dop-options-card__option_plan{{/if}}">

                                    <div class="dop-options-card__img">
                                       <img src="img/pic/{{img}}" alt="{{img}}">
                                    </div>

                                    <div class="dop-options-card__option">
                                       <div>

                                          <h3 {{#h-if ../id '===' 'turbo'}}class="mb-0" {{/h-if}}
                                             {{#h-if id '!==' 'almond'}}
                                             onclick="equipments.open('#{{id}}', {{@index}}, 'details_{{id}}')"
                                             {{else}}
                                             data-toggle="modal" data-target="#modalAlmond"
                                             onclick="openAlmond({{@../index}}, '{{id}}')"
                                             {{/h-if}}
                                          >{{{name}}}
                                             <nobr>{{speed}}</nobr>
                                          </h3>

                                       </div>

                                       {{#h-if ../id '!==' 'turbo'}}
                                          <p>{{planTitle price id plan}}</p>
                                       {{/h-if}}

                                       {{#if plan}}
                                          <div class="dop-options-card__option-radio option-radio">

                                             <label class="option-radio__radio-btn">
                                                <input name="radio-{{../id}}-{{@index}}"
                                                       id="radio36-id-{{../id}}-{{@index}}"
                                                       type="radio" value="{{plan.[36]}}" checked disabled>
                                                <label for="radio36-id-{{../id}}-{{@index}}"></label>
                                                <span>36 мес</span>
                                             </label>

                                             <label class="option-radio__radio-btn">
                                                <input name="radio-{{../id}}-{{@index}}"
                                                       id="radio24-id-{{../id}}-{{@index}}"
                                                       type="radio" value="{{plan.[24]}}" disabled>
                                                <label for="radio24-id-{{../id}}-{{@index}}"></label>
                                                <span>24 мес</span>
                                             </label>
                                          </div>
                                       {{/if}}
                                    </div>

                                    <div class="dop-options-card__price">
                                       {{#if price}}
                                          <div class="price">
                                    <span class="price__current">
                                       {{#if plan}}
                                          {{plan.[36]}}
                                       {{else}}
                                          {{price}}
                                       {{/if}}
                                    </span> <span> ₽</span>
                                             <span class="price__month"> в месяц</span>
                                          </div>
                                       {{/if}}

                                       <label class="switch">
                                          <input type="checkbox"
                                                 data-equip-name="{{id}}"
                                             {{#unless price}}checked{{/unless}}
                                             {{#h-if price '===' '0'}}checked{{/h-if}}
                                             {{#h-if id '===' 'router-4g'}}checked{{/h-if}}>
                                          <span class="round"></span>
                                       </label>
                                    </div>
                                 </div>

                              </li>
                           {{else}}
                              <li id="card-{{../id}}-{{id}}" class="tariff-modal__dop-options-card dop-options-card">
                                 <div class="dop-options-card__sim">
                                    <p>SIM-карта с тарифом
                                       <span data-toggle="modal" data-target="#tariff-all"> «МегаТариф. Без переплат»</span>
                                       Скидка 40% на абонентскую плату
                                    </p>
                                    <div class="tariff-modal__counter counter">
                                       <div class="counter__minus">&minus;</div>
                                       <input type="text" readonly value="1">
                                       <div class="counter__plus">+</div>
                                    </div>
                                 </div>

                                 <div class="dop-options-card__price">
                                    <div class="price">
                                       <span class="price__old">{{oldPrice}} ₽</span>
                                       <span class="price__current">{{price}}</span> <span> ₽</span>
                                       <span class="price__month"> в месяц</span>
                                    </div>

                                    <label class="switch">
                                       <input type="checkbox" data-equip-name="SIM">
                                       <span class="round"></span>
                                    </label>
                                 </div>

                              </li>
                           {{/h-if}}
                        {{/each}}

                     </ul>
                  </div>

                  <div class="tariff-modal__download-pdf download-pdf wrapp">
                     <span class="download-pdf__icon"><img src="./img/svg/download-pdf.svg" alt="download-pdf"></span>
                     <div class="download-pdf__text"><a target="_blank" href="#">Скачать подробную информацию о тарифе</a> <span>(PDF)</span></div>
                  </div>

               </div>
               <div class="tariff-modal__footer-container">
                  <div class="tariff-modal__footer wrapp">
                     <div class="tariff-modal__block-price">
                        <h3 class="tariff-modal__footer-title">{{group}} <span class="tariff-modal__tariff-name">
                           {{name}}
                           <div class="tariff-modal__sale-banner sale-banner">Скидка<br>навсегда!</div>
                        </span>

                        </h3>
                        <div class="tariff-modal__price">
                           <span class="tariff-modal__price-current">{{price}}</span>
                           <span class="tariff-modal__price-month"> в месяц</span>
                           <nobr>
                              <span class="tariff-modal__price-desc">с учетом выбранных опций</span>
                              {{#if iconInfo}}
                                 <svg class="tariff-modal__info-icon js-tippy-{{id}}"
                                      viewBox="2 17 16 16" width="16px" height="16px" fill="#ffffff"
                                      xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" clip-rule="evenodd"
                                          d="M9 30H11V24H9V30ZM10 22C9.8 22 9.5 21.9 9.3 21.7C9.1 21.5 9 21.3 9 21C9 20.7 9.1 20.5 9.3 20.3C9.5 20.1 9.8 20 10 20C10.2 20 10.5 20.1 10.7 20.3C10.9 20.5 11 20.7 11 21C11 21.3 10.9 21.5 10.7 21.7C10.6 21.9 10.3 22 10 22ZM10 18C6.1 18 3 21.1 3 25C3 28.9 6.1 32 10 32C13.9 32 17 28.9 17 25C17 21.1 13.9 18 10 18ZM10 33C5.6 33 2 29.4 2 25C2 20.6 5.6 17 10 17C14.4 17 18 20.6 18 25C18 29.4 14.4 33 10 33Z"
                                          fill="#ffffff">
                                    </path>
                                 </svg>
                              {{/if}}
                           </nobr>
                        </div>
                     </div>

                     <button
                        type="button"
                        class="tariff-modal__price-btn btn {{modalTariffBtn id}}"
                        data-toggle="modal"
                        data-target="#order"
                        data-view="modal_{{id}}_end"
                        onclick="openOrder({
                           eventLabel: {label: '{{id}}'},
                           priceEquipSelector: '#{{id}} .tariff-modal__price-current',
                           nameEquip: '#{{id}}',
                           tariffId: '{{tariffId}}',
                           tariffName: '{{group}} {{name}}'
                        })"
                     >Заказать
                     </button>
                  </div>
               </div>
            </div>

         </div>

      </div>
   </div>
{{/each}}

