<section class="what-else">
   <div class="wrapper">

      <h1>Что еще доступно</h1>

      <div class="what-else__cards">

         {{#each whatElse}}
            <div class="what-else__card card-what-else">

               <picture class="card-what-else__img">
                  {{#if img_mob}}
                     <source media="(max-width: 767px)" srcset="./img/pic/{{img_mob}}">
                  {{/if}}
                  <img src="./img/pic/{{img}}" alt="{{alt}}">
               </picture>

               <h2 class="card-what-else__title">{{{title}}}</h2>

               <p class="card-what-else__text">{{{text}}}</p>

               <span class="card-what-else__link link"
                     onclick="openOrder({label: '{{dataView}}', block: 'what-else'})"
                     data-toggle="modal"
                     data-target="#order">Подключить</span>
            </div>
         {{/each}}
      </div>
   </div>
</section>