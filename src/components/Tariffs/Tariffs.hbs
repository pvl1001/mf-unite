<section class="tariffs">
   <div class="wrapper">
      <h1 class="tariffs__title">Тарифы «Объединяй!»</h1>
      <!-- slider-->
      <div class="slider">
         {{#each  tariffs}}
            <div class="card slider__card slider__card_{{id}}">
               <div class="card__title card-wrapper">
                  <h2 onclick="moreTariff('#{{id}}', {{@index}}, 'details_{{dataView}}')">{{name}}</h2>
                  {{#if mark}}
                     <div class="card__title-mark mark mark_{{markClass mark}}">
                        <span>{{mark}}</span>
                     </div>
                  {{/if}}
               </div>

               <div class="card__info card-wrapper">
                  <div class="card__block-progress block-progress">

                     {{#each infoProgress}}
                        <div class="block-progress__progress-bar info-progress-bar">
                           <div class="info-progress-bar__text card__info-title">
                              <p class="info-progress-bar__text-name">{{{title}}}</p>
                              <p class="info-progress-bar__text-value">{{{value}}}</p>
                           </div>

                           <div class="info-progress-bar__line">
                              <div class="info-progress-bar__line_active"
                                   style="width: {{progressBar title value}}"></div>
                           </div>
                        </div>
                     {{/each}}

                     {{#if tvLength}}
                        <div class="block-progress__progress-bar info-progress-bar">
                           <div class="info-progress-bar__text card__info-title">
                              <p>ТВ</p>
                              <div>
                                 <div class="block-progress__desc desk-channels">
                                    <div class="block-progress__desc_icon tv"></div>
                                    <a href="#collapseChannel{{@index}}"
                                       data-toggle="collapse"
                                       data-target=".multi-collapse">
                                       {{tvLength}}
                                    </a>
                                 </div>
                              </div>
                           </div>

                           <div class="info-progress-bar__line">
                              <div class="info-progress-bar__line_active"
                                   style="width: {{progressBar 'ТВ' tvLength}}"></div>
                           </div>

                           <div data-toggle="collapse"
                                class="collapse multi-collapse collapse-channel"
                                id="collapseChannel{{@index}}">

                              <ul class="collapse-channel__channels">
                                 <li class="collapse-channel__channel-group">
                                    {{#each ../tariffs.[4].tv}}
                                       <a href="#collapseChannelGroup1{{@index}}"
                                          data-toggle="collapse"
                                          class="collapse-channel__group-toggle"
                                          aria-controls="collapse_{{../id}}_{{@index}}"
                                          data-target=".multi-collapse-gr{{@index}}"
                                          aria-expanded="false"
                                       >
                                          <div class="collapse-channel__group-wrapper">
                                             <span class="collapse-channel__group-name">{{group}}</span>
                                             <span class="collapse-channel__group-count">
                                                {{countChannel ../tv @index}}
                                             </span>
                                          </div>
                                       </a>
                                       <ul
                                          class="collapse-channel__group-list collapse multi-collapse-gr{{@index}}"
                                          id="collapse_{{../id}}_{{@index}}">
                                          {{#each groupData}}
                                             <li class="collapse-channel__group-channelName {{#if
                                                (activeName name ../.. @../index)}}text-green{{/if}}">
                                                {{name}}
                                             </li>
                                          {{/each}}
                                       </ul>
                                    {{/each}}
                                 </li>
                              </ul>
                           </div>
                        </div>
                     {{/if}}
                  </div>

                  {{#if mftv}}
                     <div class="card__block-tv block-tv">

                        <h3 class="block-tv__title card__info-title">
                           МегаФон ТВ:
                        </h3>

                        <div class="block-tv__icons tv-icons">
                           {{#each mftv}}
                              <div data-toggle="modal"
                                   data-target="#mftv-{{../id}}"
                                   class="tv-icons__icon tv-icons__icon_{{icon}}"></div>
                           {{/each}}

                        </div>

                     </div>
                  {{/if}}
               </div>

               <div class="card__price price-card card-wrapper">
                  <div class="price">
                     {{#if oldPrice}}
                        <span class="old-price">{{oldPrice}} ₽</span>
                     {{/if}}
                     <span class="new-price">{{price}}</span> <span class="always">₽</span>
                     <span>в месяц</span>
                     {{#if iconInfo}}
                        <div class="price__icon {{#if (iconInfo @index)}}price__icon_all{{/if}}"></div>
                     {{/if}}
                  </div>
                     <button data-view="tariff_card_{{dataView}}_end"
                             onclick="openOrder('send_', '{{dataView}}')"
                             data-toggle="modal"
                             data-target="#order"
                             class="price-card__btn btn"
                     >Подключить
                     </button>
                  <div class="link" data-view="tariff_card_{{dataView}}_start"
                       onclick="moreTariff('#{{id}}', {{@index}}, 'details_{{dataView}}')">Подробнее
                  </div>
               </div>
            </div>
         {{/each}}
      </div>
   </div>
</section>